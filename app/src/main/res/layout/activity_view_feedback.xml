<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewFeedback"
    android:background="@color/white">

    <include
        layout="@layout/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/imageBtnFeedReset"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/theme_MosaicBlue"
        app:srcCompat="@drawable/ic_backnew"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/image_single_view_activity"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/foodany" />

    <EditText
        android:id="@+id/Value_single_view_Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_single_view_activity"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/outline2"
        android:backgroundTint="@color/feedbackColor"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:inputType="phone"
        android:text=" 0"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal"
        tools:ignore="RtlSymmetry,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/Autofeedback_single_view_Activity"
        android:layout_width="406dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Value_single_view_Activity"
        android:layout_marginStart="10dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/outline2"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:backgroundTint="@color/feedbackColor"
        android:text="Auto feedback"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/Feedback_single_view_Activity"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/Autofeedback_single_view_Activity"
        android:layout_marginStart="10dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/outline2"
        android:gravity="top"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:paddingTop="5sp"
        android:paddingEnd="10dp"
        android:text="Feedback"
        android:backgroundTint="@color/feedbackColor"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/btnDelete_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Feedback_single_view_Activity"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="41dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@color/btns"
        android:minHeight="48dp"
        android:text="Delete"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnUpdate_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Feedback_single_view_Activity"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="41dp"
        android:layout_marginRight="240dp"
        android:backgroundTint="@color/btns"
        android:minHeight="48dp"
        android:text="Update"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/errorViewFeed"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Feedback_single_view_Activity"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"
        android:text=""
        android:textSize="18sp"
        android:textColor="@color/red"
        android:textStyle="italic" />

</RelativeLayout>